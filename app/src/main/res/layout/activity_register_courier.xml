<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".activities.RegisterCourierActivity">
    <FrameLayout
        android:background="@color/desert"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <FrameLayout
            android:id="@+id/register_courier_back"
            android:layout_width="44dp"
            android:layout_height="44dp">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/arrow_left_blue"
                android:layout_width="22dp"
                android:layout_height="15dp" />
        </FrameLayout>
        <TextView
            android:id="@+id/courier_title"
            android:textSize="17sp"
            android:textColor="@color/frame_gray_light"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_gravity="bottom"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/courier_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
