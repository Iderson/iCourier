<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:src="@drawable/orders_large_icon"
                android:layout_width="75dp"
                android:layout_height="75dp" />
            <TextView
                android:layout_marginRight="100dp"
                android:layout_marginEnd="100dp"
                android:layout_marginStart="100dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="18dp"
                android:textColor="@color/gray"
                android:text="@string/orders_list_empty"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/order_first"
            android:text="@string/do_new_order"
            android:layout_marginBottom="87dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="46dp"
            android:layout_marginStart="46dp"
            android:textSize="13sp"
            android:textColor="@color/frame_gray_light"
            android:fontFamily="sans-serif-medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:id="@+id/order_view"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="1dp"
            android:layout_height="1dp" />
        <LinearLayout
            android:id="@+id/order_in_work_arrow"
            android:layout_marginBottom="13dp"
            android:layout_toLeftOf="@+id/order_view"
            android:layout_toStartOf="@+id/order_view"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="9dp"
                android:layout_marginRight="23dp"
                android:layout_marginEnd="23dp"
                android:layout_gravity="end"
                android:src="@drawable/order_arrow"
                android:layout_width="44dp"
                android:layout_height="65dp" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>