<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginLeft="15dp"
              android:layout_marginStart="15dp"
              android:layout_marginRight="15dp"
              android:layout_marginEnd="15dp">

    <FrameLayout
        android:background="@drawable/background_gray_oval_dark"
        android:id="@+id/courier_profile_image"
        android:layout_gravity="center_horizontal"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="44dp" />
    <TextView
        android:textSize="21sp"
        android:layout_marginTop="44dp"
        android:textColor="@color/frame_gray_light"
        android:fontFamily="sans-serif-bold"
        android:text="Onboarding 1"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="17sp"
        android:layout_marginTop="17dp"
        android:textColor="@color/frame_gray_light"
        android:fontFamily="sans-serif"
        android:text="Получайте балы за приглашение друзей. Вы получите их, как только они зарегистрируются"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>