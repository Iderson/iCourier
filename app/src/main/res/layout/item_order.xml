<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_order_swipe"
    app:drag_edge="left"
    app:show_mode="pull_out"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/item_order_left_view"
        android:background="@drawable/selector_desert_transparent_frame"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="139dp"
        android:layout_height="158dp">
        <ImageView
            android:src="@drawable/green_check"
            android:layout_width="32dp"
            android:layout_height="21dp" />
        <TextView
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:textColor="@color/green"
            android:text="@string/take_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/item_order_right_view"
        android:orientation="vertical" android:layout_width="match_parent"
        android:background="@drawable/selector_white_desert_white"
        android:padding="15dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_order_name"
            android:textColor="@color/frame_gray_light"
            android:textSize="16sp"
            android:text="Букет Цветов"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/calendar_icon"
                android:layout_width="14dp"
                android:layout_height="16dp" />
            <TextView
                android:id="@+id/item_order_date"
                android:textSize="13sp"
                android:textColor="@color/gray"
                android:text="18 декабря — 19 декабря"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="14dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="13dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_height="match_parent">
                <FrameLayout
                    android:layout_marginEnd="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/background_gray_stroke_without_right"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_gravity="end|bottom"
                    android:src="@drawable/gray_arrow"
                    android:layout_width="3dp"
                    android:layout_height="4dp" />
            </FrameLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/item_order_address_from"
                    android:textColor="@color/frame_gray_light"
                    android:text="ул. Ленина, 56А"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/item_order_address_to"
                    android:layout_marginTop="9dp"
                    android:textColor="@color/frame_gray_light"
                    android:text="ул. Ленина, 56А"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_marginTop="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/location"
                android:layout_width="11dp"
                android:layout_height="16dp" />
            <TextView
                android:id="@+id/item_order_distance"
                android:textSize="13sp"
                android:textColor="@color/turquoise"
                android:text="1,2 км"
                android:layout_marginLeft="29dp"
                android:layout_marginStart="29dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/item_order_price"
                android:textColor="@color/green"
                android:text="500"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
    </LinearLayout>
</com.daimajia.swipe.SwipeLayout>