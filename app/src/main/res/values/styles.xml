<resources>

    <!-- Base application theme. -->
    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/desert</item>
        <item name="colorAccent">@color/turquoise</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fitsSystemWindows">true</item>
        <item name="colorPrimary">@color/desert</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/turquoise</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
    </style>

    <style name="BlueTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/turquoise</item>
        <item name="colorPrimaryDark">@color/turquoise</item>
        <item name="colorAccent">@color/turquoise</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
    </style>

    <style name="dialog_theme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/turquoise</item>
        <item name="colorPrimaryDark">@color/turquoise</item>
        <item name="colorAccent">@color/turquoise</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="ripple_layout">
        <!--<item name="mrl_rippleBackground">@color/white</item>-->
        <!--<item name="mrl_rippleColor">@color/turquoise_50</item>-->
        <!--<item name="mrl_rippleDuration">400</item>-->
        <!--<item name="mrl_rippleAlpha">0.5</item>-->
        <!--<item name="mrl_rippleFadeDuration">300</item>-->
        <item name="android:minHeight">44dp</item>
    </style>

    <style name="ToggleButtonStyle" parent="android:Widget.Button.Toggle">
        <item name="android:textOff"></item>
        <item name="android:textOn"></item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="edit_text" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/gray_hint</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:enabled">false</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/frame_gray_light</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:hint">@string/name</item>
    </style>

    <style name="image_phone">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:src">@drawable/phone_icon</item>
    </style>
</resources>
